{
	"compileOnSave": false,
	"compilerOptions": {
    "module": "es2020",
		"outDir": "./dist/out-tsc",
		"noImplicitAny": true,
		"sourceMap": true,
		"declaration": false,
    "moduleResolution": "node",
		"experimentalDecorators": true,
		"removeComments": false,
		"target": "es2015",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"dom"
		],
		"baseUrl": "src",
		"paths": {
			"@app/*": [
				"app/*"
			],
			"@env/*": [
				"environments/*"
			],
			"@core/*": [
				"app/core/*"
			],
			"@shared/*": [
				"app/shared/*"
			]
		}
	}
}
